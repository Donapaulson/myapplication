<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.myapplication">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!--<uses-permission android:name="android.permission.WAKE_LOCK" />-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.splash_screen" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".constraint_layout">
            <!--android:theme="@style/MyTheme">-->
            <intent-filter>
                <action android:name="android.intent.action.constraint_layout" />
            </intent-filter>
        </activity>

        <activity android:name=".progressbar">
            <intent-filter>
                <action android:name="android.intent.action.progressbar" />
            </intent-filter>
        </activity>

        <activity android:name=".recycleview">
            <intent-filter>
                <action android:name="android.intent.action.recycleview" />
            </intent-filter>
        </activity>

        <activity android:name=".background_service">
            <intent-filter>
                <action android:name="android.intent.action.background_service" />
            </intent-filter>
        </activity>

        <!-- defining the service class here -->
        <service android:name=".MyService" />

        <activity android:name=".location">
            <intent-filter>
                <action android:name="android.intent.action.location" />
            </intent-filter>
        </activity>

        <activity android:name=".fragment">
            <intent-filter>
                <action android:name="android.intent.action.fragment" />
            </intent-filter>
        </activity>

    </application>
</manifest>